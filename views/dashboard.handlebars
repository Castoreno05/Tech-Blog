<header>

  <nav>
    <ul class="links">
      <li><a href="/home">Home</a></li>
      <li><a href="/dashboard">Dashboard</a></li>
      <li><a href="/">Logout</a></li>
    </ul>
  </nav>

  <h1>Dashboard</h1>

</header>

{{! div for the buttons to collect }}
{{#each drafts as |drafts|}}
<div class="draftCard" data-draftCardId="{{drafts.id}}">
  <div class="draftTitle">
    <p>{{drafts.title}}</p>
  </div>
</div>
<div class="editContainer">

  <section class="section-four container-xl" id="{{drafts.id}}" style="display:none;">

    <h2>Edit Post</h2>
    <div class="loginModal">
      <form method="POST">
        <br>
        <input value="{{drafts.title}}"/>
        <br>
        <br>
        <textarea type="text" name="content">{{drafts.content}}</textarea>
      </form>
    </div>
    <div id="inputDiv">
      <input type="submit" name="submit" value="Submit" class="submitEdit" />
      <input type="submit" name="update" value="Update" class="updateDraft" />
      <input type="submit" name="delete" value="Delete" class="deleteDraft" />
    </div>

  </section>

</div>
{{/each}}

<section class="section-three container-xl" style="display:none;" id="section-three">

  <h2>Create New Post</h2>
  <div class="loginModal">
    <form method="POST">
      <p>Title</p>
      <input type="text" name="title" class="title" />
      <p>Content</p>
      <textarea type="text" name="content"></textarea>
    </form>
  </div>
  <div id="inputDiv">
    <input type="submit" name="submit" value="Submit" class="submit" />
    <input type="submit" name="create" value="Create" class="create" />
  </div>

</section>

<footer>

  <div class="d-grid gap-2 col-6 mx-auto">
    <button type="button" class="btn btn-dark" id="newPost">+ New Post</button>
  </div>

</footer>

<script src="./js/dashboard.js"></script>