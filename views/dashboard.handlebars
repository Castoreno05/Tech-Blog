{{! div for the buttons to collect }}
{{#each drafts as |drafts|}}
  <div class="draftCard" data-draftCardId="{{drafts.id}}">
    <div class="draftTitle">
      <p>{{drafts.title}}</p>
    </div>
  </div>
  <div class="editContainer">

    <section
      class="section-four container-xl"
      id="{{drafts.id}}"
      style="display:none;"
    >

      <h2>Edit Post</h2>
      <div class="loginModal">
        <form method="POST">
          <p>{{drafts.title}}</p>
          <input type="text" name="title" id="title" />
          <p>Content</p>
          <textarea type="text" name="content" id="content"></textarea>
        </form>
      </div>
      <div id="inputDiv">
        <input type="submit" name="submit" value="Submit" class="submitDraft"/>
        <input type="submit" name="update" value="Update" class="updateDraft"/>
      </div>

    </section>

  </div>
{{/each}}

