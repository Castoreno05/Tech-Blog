<header>

  <nav>
    <ul class="links">
      <li><a href="/home">Home</a></li>
      <li><a href="/dashboard">Dashboard</a></li>
      <li><a href="/">Logout</a></li>
    </ul>
  </nav>
  <h1>Tech Blog</h1>
</header>

<div class="postComment">
  <h3>{{posts.title}}</h3>
  <p>{{posts.content}}</p>
  <p class="userId">-{{posts.user.name}}</p>
  <p class="createdAt" style="display: none;">{{posts.createdAt}}</p>
</div>

{{#each posts.comments as |comment|}}
  <div class="submittedComment">
    <h3>Comment</h3>
    <p>{{comment.content}}</p>
    <p>-{{comment.user.name}}</p>
    <p class="commentDate">{{comment.createdAt}}</p>
  </div>
{{/each}}

<div class="commentDiv" data-id="{{posts.id}}">
  <h3>Comment</h3>
  <textarea type="text" name="comments" id="comment"></textarea>
  <button class="commentBtn">Submit</button>
</div>

<footer>
  <div class="foot-container"></div>
</footer>
<script src="/js/singlepost.js"></script>